<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" android:background="#FFFBF7"
    android:id="@+id/uploadProductsFragment">
    <!--<TextView
        android:id="@+id/sign_up"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"

        android:textSize="24sp"
        android:text="Rent out your product"
        android:textColor="#4E41FF"
        android:textStyle="bold"
        />-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/camera"
            android:layout_centerHorizontal="true"

            android:id="@+id/uploadPicture"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/uploadPicture"
            android:text="Name"
            android:textColor="#1BAFFF"
            android:layout_marginStart="24dp"
            android:layout_marginTop="14dp"
            android:textStyle="bold"
            android:id="@+id/nameText"
            android:layout_marginLeft="24dp"
            android:textSize="18sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameText"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:hint="Name of the product"
            android:textSize="18sp"
            android:textColorHint="#b9b9b9"
            android:inputType="text"
            android:layout_marginTop="8dp"
            android:id="@+id/productNameEditText"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/productNameEditText"
            android:text="Description"
            android:textColor="#1BAFFF"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:id="@+id/descriptionText"
            android:layout_marginLeft="24dp"
            android:textSize="18sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descriptionText"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:hint="Describe the condition of the product"
            android:textSize="18sp"
            android:textColorHint="#b9b9b9"
            android:inputType="text"
            android:layout_marginTop="8dp"
            android:id="@+id/descriptionEditText"
            android:textColor="#000000"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/descriptionEditText"
            android:text="Rate"
            android:textColor="#1BAFFF"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:id="@+id/priceText"
            android:layout_marginLeft="24dp"
            android:textSize="18sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/priceText"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:hint="Rate of the product per day or per hour"
            android:textSize="18sp"
            android:textColorHint="#b9b9b9"
            android:inputType="text"
            android:layout_marginTop="8dp"
            android:id="@+id/rateEditText"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/rateEditText"
            android:text="Choose Sport"
            android:textColor="#1BAFFF"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:id="@+id/sportText"
            android:layout_marginLeft="24dp"
            android:textSize="18sp"
            />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/sportText"
            android:id="@+id/radioGroup"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp">
            <RadioButton android:id="@+id/radio_golf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Golf"

                android:textColor="#b9b9b9"

                android:buttonTint="#4E41FF"
                />
            <RadioButton android:id="@+id/radio_tennis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tennis"

                android:textColor="#b9b9b9"

                android:buttonTint="#4E41FF"
                />
            <RadioButton android:id="@+id/radio_table_tennis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Table Tennis"

                android:textColor="#b9b9b9"

                android:buttonTint="#4E41FF"/>
            <RadioButton android:id="@+id/radio_football"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Football"

                android:textColor="#b9b9b9"

                android:buttonTint="#4E41FF"/>
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/radioGroup"
            android:text="Choose Rate Period"
            android:textColor="#1BAFFF"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:id="@+id/ratePeriodText"
            android:layout_marginLeft="24dp"
            android:textSize="18sp"
            />

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/ratePeriodText"
            android:id="@+id/radioGroup2"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp">

            <RadioButton android:id="@+id/radio_perDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Per Day"

                android:textColor="#b9b9b9"

                android:buttonTint="#4E41FF"
                />
            <RadioButton android:id="@+id/radio_perHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Per Hour"

                android:textColor="#b9b9b9"

                android:buttonTint="#4E41FF"
                />

        </RadioGroup>


        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#4E41FF"
            android:text="SUBMIT"
            android:layout_below="@+id/radioGroup2"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="24dp"
            android:textSize="18sp"
            android:id="@+id/submitProductButton"
            />




    </RelativeLayout>




</ScrollView>